<div id="<%= dom_id project %>" class="rounded-md bg-gray-100 mb-8 p-4">
  <p class="my-5 flex gap-2">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= project.name %>
  </p>
  <p class="my-5 flex gap-2">
    <strong class="block font-medium mb-1">Sprints:</strong>
    <% project.sprints.each do |sprint| %>
      <span class="text-xs font-bolder bg-sky-500 text-white rounded-lg py-2 px-4"><%= sprint.name %></span>
    <% end %>
  </p>
  <%= link_to "Edit this project", edit_project_path(project), class: "mt-2 ml-2 rounded-lg py-3 px-5 text-blue-400 inline-block font-medium" %>
  <%= link_to "Show this project", project, class: "mt-2 ml-2 rounded-lg py-3 px-5 text-indigo-400 inline-block font-medium" %>
</div>
